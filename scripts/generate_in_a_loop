#!/usr/bin/env bash

while true; do
  timestamp=$(date +%s)
  echo "Preparing a run"
  timeout 5m python3 predictor/src/Predictor.py --mode generate --model-dir local.model/ --training-data "$1" --test-data "$2" --output-path "."
  echo "Saving " ${timestamp}
  mkdir -p samples/${timestamp}/
  cp output.txt samples/${timestamp}/
  cp seed.txt samples/${timestamp}/
done
